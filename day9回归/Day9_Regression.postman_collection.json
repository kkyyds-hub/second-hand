  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "var url = pm.request.url.toString();",
          "// Skip auth injection for login endpoints",
          "if (url.includes('/user/auth/login')) { return; }",
          "// Decide token by endpoint type (seller vs buyer)",
          "var token = \"\";",
          "var isSellerEndpoint = url.includes('/user/seller') || url.includes('/user/products') || url.includes('/user/orders/sell');",
          "token = isSellerEndpoint ? pm.environment.get('token_seller') : pm.environment.get('token_buyer');",
          "// If request already sets authentication explicitly (negative tests), respect it",
          "var h = pm.request.headers.get('authentication');",
          "if (h && h !== '{{authentication}}') { return; }",
          "if (token) { pm.request.headers.upsert({ key: \"authentication\", value: token }); }"
        ]
      }
    }
  ],
