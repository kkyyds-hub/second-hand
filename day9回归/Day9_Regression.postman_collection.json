                  "var jsonData = pm.response.json();",
                  "console.log(\"Seller Summary Response:\", pm.response.text());",
                  "pm.test(\"code == 1\", function () { pm.expect(jsonData.code).to.eql(1); });",
                  "pm.test(\"has summary fields\", function () {",
                  "  var d = jsonData.data || {};",
