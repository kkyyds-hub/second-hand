<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.ProductMapper">

    <resultMap id="ProductResultMap" type="com.demo.entity.Product">
        <result property="id" column="id"/>
        <result property="title" column="name"/>
        <result property="category" column="category"/>
        <result property="status" column="status"/>
        <result property="createTime" column="submit_time"/>
    </resultMap>
    <update id="updateProduct" parameterType="com.demo.entity.Product">
        UPDATE product
        SET
            reason = #{product.reason},
            status = #{product.status},
            submit_time = #{product.createTime}
        WHERE id = #{product.id}
    </update>

    <select id="getPendingApprovalProducts" resultType="com.demo.entity.Product">
        SELECT id, name, category, status, submit_time AS createTime, reason
        FROM product
        WHERE id = #{productId} <!-- 使用 productId 作为查询条件 -->
    </select>
    <select id="getProductById" resultType="com.demo.entity.Product" parameterType="java.lang.Long">
        SELECT id, name, category, status, submit_time AS createTime
        FROM product
        WHERE id = #{productId}
    </select>


</mapper>
