{
  "info": {
    "_postman_id": "c8a2f4d1-7b7d-4a0b-9a11-11f4a7c8a211",
    "name": "Day11 Regression - Favorites (MP + SoftDelete)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto inject buyer token for /user/** endpoints (except login)",
          "var url = pm.request.url.toString();",
          "if (url.includes('/user/auth/login')) return;",
          "",
          "// If request already sets authentication explicitly, do not override",
          "var existing = pm.request.headers.get('authentication');",
          "if (existing && existing !== '{{authentication}}') return;",
          "",
          "var t = pm.environment.get('token_buyer');",
          "if (t) pm.request.headers.upsert({ key: 'authentication', value: t });"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "01-Auth",
      "item": [
        {
          "name": "Buyer Login (Password)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/auth/login/password",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "user",
                "auth",
                "login",
                "password"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"loginId\":\"{{buyer_username}}\",\"password\":\"{{buyer_password}}\"}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('HTTP 200', ()=> pm.response.to.have.status(200));",
                  "var j = pm.response.json();",
                  "pm.test('code == 1', ()=> pm.expect(j.code).to.eql(1));",
                  "pm.test('token exists', ()=> pm.expect(j.data && j.data.token).to.be.ok);",
                  "pm.environment.set('token_buyer', j.data.token);",
                  "if (j.data && j.data.user && j.data.user.id) pm.environment.set('buyerId', j.data.user.id);"
                ]
              }
            }
          ]
        }
      ]
    },
